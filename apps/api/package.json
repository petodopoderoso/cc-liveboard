{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy --env prod",
    "db:init": "wrangler d1 execute cc-liveboard-db-dev --local --file=./src/db/schema.sql",
    "db:init:dev": "wrangler d1 execute cc-liveboard-db-dev --remote --env dev --file=./src/db/schema.sql",
    "db:init:prod": "wrangler d1 execute cc-liveboard-db-prod --remote --env prod --file=./src/db/schema.sql"
  },
  "dependencies": {
    "hono": "latest"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "latest",
    "typescript": "latest",
    "wrangler": "latest"
  }
}
